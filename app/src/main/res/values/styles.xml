<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Title">
        <item name="android:textSize">55sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TrackTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TrackTitle.Item">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="TrackText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="TrackText.Item">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorBlack</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>
</resources>
